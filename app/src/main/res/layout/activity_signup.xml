<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="800dp"
            android:background="@drawable/bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="DAFTAR"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textAlignment="center"
                android:layout_marginTop="40dp">
            </TextView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:background="@drawable/kotak_login"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:text="SIGN UP"
                    android:padding="0dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp">
                </ImageButton>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/google"
                    android:layout_marginTop="125dp"
                    android:layout_marginStart="30dp">
                </ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lanjutkan Dengan Google"
                    android:textStyle="bold"
                    android:layout_marginTop="132dp"
                    android:layout_marginStart="80dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    ></TextView>
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="250dp"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    ></TextView>
                <EditText
                    android:id="@+id/nama_daftar"
                    style="@style/edittext"
                    android:inputType="textPersonName"
                    android:background="@drawable/kotak_login"
                    android:drawableStart="@drawable/logo_profile"
                    android:padding="10dp"
                    android:layout_marginTop="20dp">
                </EditText>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="320dp"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No HP"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    ></TextView>
                <EditText
                    android:id="@+id/hp_daftar"
                    style="@style/edittext"
                    android:inputType="textPhonetic"
                    android:background="@drawable/kotak_login"
                    android:drawableStart="@drawable/logo_hp"
                    android:padding="10dp"
                    android:layout_marginTop="20dp">
                </EditText>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="390dp"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    ></TextView>
                <EditText
                    android:id="@+id/email_daftar"
                    style="@style/edittext"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/kotak_login"
                    android:drawableStart="@drawable/logo_email"
                    android:padding="10dp"
                    android:layout_marginTop="20dp">
                </EditText>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="460dp"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    ></TextView>
                <EditText
                    android:id="@+id/password_daftar"
                    style="@style/edittext"
                    android:inputType="textPassword"
                    android:background="@drawable/kotak_login"
                    android:drawableStart="@drawable/logo_password"
                    android:padding="10dp"
                    android:layout_marginTop="20dp">
                </EditText>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="530dp"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konfirmasi Password"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    ></TextView>
                <EditText
                    android:id="@+id/konfpass_daftar"
                    style="@style/edittext"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/kotak_login"
                    android:drawableStart="@drawable/logo_password"
                    android:padding="10dp"
                    android:layout_marginTop="20dp">
                </EditText>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="650dp">
                <Button
                    android:id="@+id/masuk_signup"
                    android:layout_width="104dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/white"
                    android:text="Masuk"
                    android:textColor="@color/black"
                    android:textSize="13dp">
                </Button>
                <Button
                    android:id="@+id/daftar_signup"
                    android:layout_width="104dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="237dp"
                    android:backgroundTint="@color/white"
                    android:text="daftar"
                    android:textColor="@color/black"
                    android:textSize="13dp">
                </Button>
            </FrameLayout>


        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>