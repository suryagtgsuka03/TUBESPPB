<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Keranjang">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/navbar_keranjang"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/sky">
            <ImageButton
                android:id="@+id/back_keranjang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/arrow_back"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp">
            </ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keranjang"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="60dp">
            </TextView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tipekirim_keranjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/navbar_keranjang"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengiriman"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:padding="20dp"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/buttonrounded_white"
                android:text="Pilih Tipe Pengirim                                    Pilih"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp">
            </TextView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/produk_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tipekirim_keranjang"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Produk               Rp.99.999"
                android:textStyle="bold"
                android:layout_marginStart="130dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Satuan Obat"
                android:textStyle="bold"
                android:layout_marginStart="130dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                ></TextView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_poduk_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/produk_keranjang"
            android:layout_marginStart="210dp">
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:src="@drawable/logo_sampah">
            </ImageButton>
            <ImageButton
                android:layout_marginStart="40dp"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:src="@drawable/logo_minus">
            </ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="80dp"
                android:textSize="20dp"
                ></TextView>
            <ImageButton
                android:layout_marginStart="110dp"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:src="@drawable/logo_plus">
            </ImageButton>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tambah_barang_keranjang"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/btn_poduk_keranjang"
            android:layout_marginTop="30dp"
            android:background="@color/sky">
            <Button
                android:id="@+id/pnct1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:text="+ Tambah Barang"
                android:textColor="@color/black"
                android:textSize="13dp">
            </Button>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/alamat_keranjang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tambah_barang_keranjang"
            android:layout_marginTop="120dp"
            android:background="@drawable/kotak_biru2"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diantar Ke"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="300dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="25dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Lengkap"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="40dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="70dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/email_daftar"
                style="@style/edittext2"
                android:inputType="textEmailAddress"
                android:background="@drawable/kotak_login"
                android:layout_marginTop="90dp"
                android:textSize="12dp"
                android:hint="Tambah Catatan : No. rumah, Lantai, Unit, Patokan">
            </EditText>
            <View
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="2dp"
                android:layout_marginTop="140dp"
                android:background="@color/white">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Barang"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="160dp">
            </TextView>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/logo_circle"
                android:layout_marginStart="105dp"
                android:layout_marginTop="166dp"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Harga"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="120dp"
                android:layout_marginTop="160dp">
            </TextView>
            <Button
                android:id="@+id/pnct3"
                android:layout_width="104dp"
                android:layout_height="40dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="150dp"
                android:backgroundTint="@color/white"
                android:text="Lanjut"
                android:textColor="@color/black"
                android:textSize="13dp">
            </Button>
        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>